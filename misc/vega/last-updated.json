{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "usermeta": {
    "notes": [
      "Bar chart with time since last pushed metric (latest _timestamp) per run",
      "Data Source:",
      "(runSets: ..., filters: [])",
      "   id",
      "   name",
      "   createdAt",
      "   history: (keys: [_timestamp])"
    ]
  },
  "title": "Hours since last update",
  "data": {"name": "wandb"},
  "params": [
    {
      "name": "run_filter_days",
      "value": "${string:Run filter (d):3}"
    },
    {
      "name": "fresh_marker_days",
      "value": "${string:Fresh marker (d):1}"
    },
    {
      "name": "tag_fresh",
      "value": "${string:Fresh tag:}"
    },
    {
      "name": "tag_stale",
      "value": "${string:Stale tag:-}"
    }
  ],
  "config": {
    "legend": { "disable": true },
    "axis": {
      "grid": false,
      "domain": false,
      "ticks": false,
      "labelFontSize": 12,
      "labelFont": "monospace",
      "title": null
    }
  },
  "transform": [
    { "filter": "isValid(datum._timestamp)" },
    {
      "window": [{"op": "row_number", "as": "rn"}],
      "sort": [{"field": "_timestamp", "order": "descending"}],
      "groupby": ["name"]
    },
    { "filter": "datum.rn == 1" },
    { "calculate": "(now() - (datum._timestamp * 1000)) / 3600000", "as": "age_hours" },
    { "calculate": "datum.age_hours > 1", "as": "stale" },
    { "calculate": "floor((now() - (datum._timestamp * 1000)) / 60000)", "as": "age_min" },
    { "calculate": "floor(datum.age_min / 60)", "as": "age_h" },
    { "calculate": "datum.age_min % 60", "as": "age_m" },
    {
      "calculate": "datum.age_h > 0 ? datum.age_h + 'h ' + datum.age_m + 'min' : datum.age_m + 'min'",
      "as": "age_human"
    },
    { "calculate": "toDate(datum._timestamp * 1000)", "as": "last_time" },

    { "calculate": "now()/1000 - run_filter_days*24*3600", "as": "ref_run_ts" },
    { "filter": "datum._timestamp > datum.ref_run_ts" },

    { "calculate": "now()/1000 - fresh_marker_days*24*3600", "as": "ref_fresh_ts" },
    { "calculate": "datum._timestamp > datum.ref_fresh_ts", "as": "fresh" },
    { "calculate": "(datum.fresh ? tag_fresh : tag_stale) + datum.id", "as": "id_label" }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "age_hours",
      "type": "quantitative",
      "scale": { "domain": [0, 3], "clamp": true },
      "axis": { "tickMinStep": 1, "format": "d", "labelExpr": "datum.value + 'h'" }
    },
    "y": {
      "field": "id_label",
      "type": "nominal",
      "sort": {"field": "createdAt", "order": "descending"}
    },
    "color": {
      "field": "age_hours",
      "type": "quantitative",
      "scale": {
        "domain": [0.5, 1, 2],
        "range": ["#2166AC", "#FFD400", "#B2182B"],
        "clamp": true,
        "interpolate": "lab"
      }
    },
    "tooltip": [
      { "field": "id", "type": "nominal", "title": "Run" },
      { "field": "last_time", "type": "temporal", "title": "Last update", "format": "%Y-%m-%d %H:%M" },
      { "field": "age_human", "type": "nominal", "title": "Hours" }
    ]
  }
}
