{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "usermeta": {
    "notes": [
      "Bar chart with mean value of timer_abs/all metric for the last 24 hours",
      "Window is relative to each run's latest _timestamp (not now())",
      "Data Source:",
      "(runSets: ..., filters: [])",
      "   id",
      "   name",
      "   createdAt",
      "   history: (keys: [_timestamp, timer_abs/all, timer_abs/eval])"
    ]
  },
  "title": {"text": {"expr": "'timer_abs/all (' + hours_window + 'h avg)'"}},
  "data": { "name": "wandb" },
  "params": [
    {
      "name": "hours_window",
      "value": "${string:Window (h):24}"
    },
    {
      "name": "run_filter_days",
      "value": "${string:Run filter (d):7}"
    },
    {
      "name": "fresh_marker_days",
      "value": "${string:Fresh mark (d):1}"
    },
    {
      "name": "tag_fresh",
      "value": "${string:Fresh tag:}"
    },
    {
      "name": "tag_stale",
      "value": "${string:Stale tag:-}"
    }
  ],
  "config": {
    "legend": { "disable": true },
    "axis": {
      "grid": false,
      "domain": false,
      "ticks": false,
      "labelFontSize": 12,
      "labelFont": "monospace",
      "title": null
    }
  },
  "transform": [
    { "filter": "isValid(datum._timestamp) && isValid(datum['timer_abs/all'])" },
    { "calculate": "datum['timer_abs/all'] - datum['timer_abs/eval']", "as": "timer_sub" },

    { "calculate": "datum._timestamp * 1000", "as": "ts_ms" },

    {
      "joinaggregate": [
        { "op": "max", "field": "ts_ms", "as": "last_ts_ms" }
      ],
      "groupby": ["id"]
    },

    { "calculate": "time(toDate(datum.createdAt))", "as": "createdAt_ms" },

    { "calculate": "now()/1000 - run_filter_days*24*3600", "as": "ref_run_ts" },
    { "filter": "datum._timestamp > datum.ref_run_ts" },

    {
      "aggregate": [
        { "op": "mean", "field": "timer_sub", "as": "avg24h" },
        { "op": "count", "as": "n_points" },
        { "op": "max", "field": "last_ts_ms", "as": "last_ts_ms" },
        { "op": "max", "field": "createdAt_ms", "as": "createdAt_ms" }
      ],
      "groupby": ["id"]
    },

    { "calculate": "now() - fresh_marker_days*24*3600*1000", "as": "ref_fresh_ts" },
    { "calculate": "datum.last_ts_ms > datum.ref_fresh_ts", "as": "fresh" },
    { "calculate": "(datum.fresh ? tag_fresh : tag_stale) + datum.id", "as": "id_label" }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "id_label",
      "type": "nominal",
      "sort": { "field": "createdAt_ms", "order": "descending" }
    },
    "color": {
      "field": "avg24h",
      "type": "quantitative",
      "scale": {
        "domain": [25, 35, 45],
        "range": ["#2166AC", "#FFD400", "#B2182B"],
        "clamp": true,
        "interpolate": "lab"
      }
    },
    "x": {
      "field": "avg24h",
      "type": "quantitative",
      "scale": { "domain": [20, 50], "clamp": true },
      "axis": { "tickMinStep": 10, "format": "d", "labelExpr": "datum.value + 's'" }
    },
    "tooltip": [
      { "field": "id", "type": "nominal", "title": "Run" },
      { "field": "avg24h", "type": "quantitative", "title": "Avg [s]", "format": ".1f" }
    ]
  }
}
