{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "usermeta": {
    "notes": [
      "Bar chart with number of resumes in the last 24 hours",
      "Data Source:",
      "(runSets: ..., filters: [])",
      "   id",
      "   name",
      "   createdAt",
      "   history: (keys: [_timestamp, global/resumes, eval/ep_rew_mean])",
      "   history1: (keys: [_timestamp, eval/ep_rew_mean])"
    ]
  },
  "title": {"text": {"expr": "'# of resumes (last ' + hours_window + 'h)'"}},
  "data": { "name": "wandb" },
  "params": [
    {
      "name": "hours_window",
      "value": "${string:Window (h):24}"
    },
    {
      "name": "run_filter_days",
      "value": "${string:Run filter (d):3}"
    },
    {
      "name": "fresh_marker_days",
      "value": "${string:Fresh mark (d):1}"
    },
    {
      "name": "tag_fresh",
      "value": "${string:Fresh tag:}"
    },
    {
      "name": "tag_stale",
      "value": "${string:Stale tag:-}"
    }
  ],
  "config": {
    "legend": { "disable": true },
    "axis": {
      "grid": false,
      "domain": false,
      "ticks": false,
      "labelFontSize": 12,
      "labelFont": "monospace",
      "title": null
    }
  },
  "transform": [
    {
      "calculate": "isValid(datum['eval/ep_rew_mean']) ? datum._timestamp * 1000 : null",
      "as": "_eval_ts"
    },
    {
      "joinaggregate": [
        { "op": "max", "field": "_eval_ts", "as": "_last_eval_ts" }
      ],
      "groupby": ["id"]
    },

    { "filter": "isValid(datum['global/resumes'])" },
    { "calculate": "datum._timestamp * 1000", "as": "cur_ts" },
    { "calculate": "now() - hours_window*3600*1000", "as": "ref_ts" },
    { "calculate": "now() - fresh_marker_days*24*3600*1000", "as": "ref_fresh_ts" },

    {
      "joinaggregate": [
        { "op": "max", "field": "cur_ts", "as": "last_ts" }
      ],
      "groupby": ["id"]
    },
    { "filter": "datum.last_ts >= now() - run_filter_days*24*3600*1000" },

    { "calculate": "datum.cur_ts <= datum.ref_ts ? datum['global/resumes'] : 0", "as": "resumes_before_24h" },
    {
      "joinaggregate": [
        { "op": "max", "field": "global/resumes", "as": "resumes_now" },
        { "op": "max", "field": "resumes_before_24h", "as": "resumes_ref" }
      ],
      "groupby": ["id"]
    },
    { "calculate": "datum.resumes_now - datum.resumes_ref", "as": "resumes_diff" },

    {
      "window": [{ "op": "row_number", "as": "rn" }],
      "sort": [{ "field": "_timestamp", "order": "descending" }],
      "groupby": ["id"]
    },
    { "filter": "datum.rn == 1" },
    { "filter": "isValid(datum.resumes_ref) && isValid(datum.resumes_diff)" },

    { "calculate": "datum._last_eval_ts >= datum.ref_fresh_ts", "as": "fresh" },
    { "calculate": "(datum.fresh ? tag_fresh : tag_stale) + datum.id", "as": "id_label" }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "id_label",
      "type": "nominal",
      "sort": {"field": "createdAt", "order": "descending"}
    },
    "color": {
      "field": "resumes_diff",
      "type": "quantitative",
      "scale": {
        "domain": [1, 3, 5],
        "range": ["#2166AC", "#FFD400", "#B2182B"],
        "clamp": true,
        "interpolate": "lab"
      }
    },
    "x": {
      "field": "resumes_diff",
      "type": "quantitative",
      "scale": { "domain": [0, 5], "clamp": true },
      "axis": { "tickMinStep": 1, "format": "d" }
    },
    "tooltip": [
      { "field": "id", "type": "nominal", "title": "Run" },
      { "field": "resumes_diff", "type": "quantitative", "title": "Resumes (24h)" }
    ]
  }
}
